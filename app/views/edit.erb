<h4>Update Single Recipe</h4>

<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hideen" name="_method" value="patch">
    <label for="name">Name : </label>
    <input type="text" name="name" id="name" value="<%= @recipe.name %>"/><br><br>
    <label for="ingredients">Ingredients : </label><br>
    <textarea name="ingredients" id="ingredients" cols="30" rows="10" ><%= @recipe.ingredients %></textarea><br><br>
    <label for="cook_time">Cook Time : </label>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"/><br><br>

    <input type="submit" value="EDIT Recipe">

</form>
